public class Actividad1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[]args) {
        double valor = 10.5;
        double centimetro = 2.54;
        int pulgada = 1;
        double respuesta=centimetro * valor/pulgada;
        System.out.println(valor+" pulgadas son "+respuesta+" ctms" );
                
    }
    
}
